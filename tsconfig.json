{
	"compilerOptions": {
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"resolveJsonModule": true,
		"strict": true,
		"target": "es2015",
		"allowJs": true,
		"skipLibCheck": true
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"**/*.ts",
		"**/*.tsx"
	]
}
